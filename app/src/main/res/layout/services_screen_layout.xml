<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/car_wash_services_bg">

    <ImageView
        android:id="@+id/service_background"
        android:layout_width="150dp"
        android:layout_height="0dp"
android:scaleType="centerCrop"
        android:elevation="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/car_engine_service"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/car_wash_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"

        android:layout_marginBottom="95dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Car Wash Services"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/service_background"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintTop_toTopOf="@+id/service_background" />

    <TextView
        android:id="@+id/start_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Strat From"
        android:textColor="@color/white"
        android:alpha="0.5"
        android:fontFamily="@font/poppins"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/car_wash_services"
        app:layout_constraintTop_toBottomOf="@+id/car_wash_services" />


    <TextView
        android:id="@+id/service_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99 SR"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/start_from"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/start_from"
        app:layout_constraintTop_toTopOf="@+id/start_from" />

    <Button
        android:id="@+id/signin_email"
        android:layout_width="143dp"
        android:layout_height="26dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sign_in_email"
        android:text="View Service Details"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/service_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/start_from"
        app:layout_constraintTop_toBottomOf="@+id/start_from" />

</androidx.constraintlayout.widget.ConstraintLayout>