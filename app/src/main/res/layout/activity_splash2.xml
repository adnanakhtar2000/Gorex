<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#362380"
    android:layout_height="match_parent"
    tools:context=".activity.Splash2">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:src="@drawable/ic_group__1_"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gorex_logo"
        android:layout_width="234dp"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_gorex_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your Country"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_display"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/countryCodePicker"
        app:layout_constraintStart_toStartOf="@+id/countryCodePicker" />


    <com.hbb20.CountryCodePicker
        android:id="@+id/countryCodePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/picker"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="126dp"

        app:ccpDialog_textColor="@color/white"
        app:ccp_autoDetectCountry="true"
        app:ccp_showFlag="true"
        app:ccp_arrowColor="@color/black"
        app:ccp_countryAutoDetectionPref="NETWORK_SIM"
        app:ccp_showNameCode="true"
        app:ccp_showFullName="true"
        app:ccp_showPhoneCode="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gorex_logo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select language"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sf_pro_display"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/selet_language"
        app:layout_constraintStart_toStartOf="@+id/selet_language" />


    <Spinner
        android:id="@+id/selet_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="30dp"

        android:spinnerMode="dialog"
        android:popupBackground="@color/white"
        android:paddingRight="20dp"
        android:background="@drawable/picker"
        android:layout_marginTop="236dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gorex_logo" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="200dp"
        android:layout_marginRight="27dp"
        android:src="@drawable/ccp_ic_arrow_drop_down"
        app:layout_constraintBottom_toBottomOf="@+id/selet_language"
        app:layout_constraintEnd_toEndOf="@+id/selet_language"
        app:layout_constraintTop_toTopOf="@+id/selet_language"
        app:tint="#615757" />
    <Button
        android:id="@+id/splash_next"
        android:layout_width="159dp"
        android:layout_height="56dp"

       android:layout_marginBottom="30dp"
        android:text="Next"
       android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/sf_pro_display"
        android:textStyle="bold"
        android:background="@drawable/login_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>