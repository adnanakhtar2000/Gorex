<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Order_confirm_Activity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:minHeight="?actionBarSize"
        android:background="@drawable/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/toolbar1"
        android:elevation="10dp"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Confirmed"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toTopOf="@+id/toolbar1"
        app:layout_constraintBottom_toBottomOf="@id/toolbar1"
        app:layout_constraintLeft_toLeftOf="@id/toolbar1"
        app:layout_constraintRight_toRightOf="@id/toolbar1"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:tint="@color/white" />
    <ImageView
        android:id="@+id/cart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="14dp"
        android:elevation="10dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:tint="@color/white" />



    <View
        android:id="@+id/view_of_product_services"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="@drawable/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grand Total"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="277dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="114dp"
        app:layout_constraintTop_toTopOf="@+id/view_of_product_services"
        app:layout_constraintBottom_toBottomOf="@id/view_of_product_services"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1600 SR"
        android:textColor="#362380"
        android:textSize="24dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginLeft="255dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="114dp"
        app:layout_constraintTop_toTopOf="@+id/view_of_product_services"
        app:layout_constraintBottom_toBottomOf="@id/view_of_product_services"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:text="View Order"
        android:elevation="5dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display"
        android:textStyle="bold"
        android:background="@drawable/login_button"
        app:layout_constraintTop_toTopOf="@id/view_of_product_services"
        app:layout_constraintLeft_toLeftOf="@id/view_of_product_services"
        app:layout_constraintRight_toRightOf="@id/view_of_product_services"
        app:layout_constraintBottom_toBottomOf="@id/view_of_product_services"
        />
</androidx.constraintlayout.widget.ConstraintLayout>