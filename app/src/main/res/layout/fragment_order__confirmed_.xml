<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    tools:context="com.example.gorex.Product_And_Services_Fragment.Order_Confirmed_Fragment">
<androidx.cardview.widget.CardView
    android:id="@+id/job_order1"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="20dp"
    android:background="@color/white"
    app:cardBackgroundColor="@color/white"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">


</androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:background="@drawable/bg1"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="@+id/job_order1"
        app:layout_constraintEnd_toEndOf="@id/job_order1"
        app:layout_constraintTop_toTopOf="@id/job_order1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Order Number"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view" />

    <TextView
        android:id="@+id/order_number_uc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Job Order #"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="11dp"
        app:layout_constraintStart_toStartOf="@id/job_order1"
        app:layout_constraintTop_toBottomOf="@id/view" />
    <TextView
        android:id="@+id/order_number_uc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="A5409009801"
        android:layout_marginRight="14dp"
        android:textColor="#4AD594"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="11dp"
        app:layout_constraintEnd_toEndOf="@id/job_order1"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/time_and_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Time &amp; Date"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/order_number_uc"
        app:layout_constraintTop_toBottomOf="@id/order_number_uc" />
    <TextView
        android:id="@+id/time_and_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="09:10 AM / 12/12 / 2021"
        android:textColor="#4AD594"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/order_number_uc1"
        app:layout_constraintEnd_toEndOf="@id/job_order1"

        />
    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Order Status"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/order_number_uc"
        app:layout_constraintTop_toBottomOf="@id/time_and_date" />

    <TextView
        android:id="@+id/order_status1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Uncomplete"
        android:textColor="#D5954A"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/time_and_date1"
        app:layout_constraintEnd_toEndOf="@id/job_order1"
        />
    <TextView
        android:id="@+id/payment_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Payment Method"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/order_number_uc"
        app:layout_constraintTop_toBottomOf="@id/order_status" />


    <TextView
        android:id="@+id/payment_method1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Cash"
        android:textColor="#4AD594"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/order_status1"
        app:layout_constraintEnd_toEndOf="@id/job_order1"
        />

    <TextView
        android:id="@+id/vehicle_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Payment Method"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/job_order1"
        app:layout_constraintEnd_toEndOf="@id/job_order1"
        app:layout_constraintTop_toBottomOf="@id/payment_method" />

    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Brand"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/order_number_uc"
        app:layout_constraintTop_toBottomOf="@id/vehicle_details" />

    <TextView
        android:id="@+id/brand1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Corolla"
        android:textColor="@color/black"
        android:alpha="0.3"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/brand"
        app:layout_constraintStart_toEndOf="@+id/brand"
        app:layout_constraintTop_toTopOf="@+id/brand" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Year"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="@+id/order_number_uc"
        app:layout_constraintTop_toBottomOf="@+id/brand" />

    <TextView
        android:id="@+id/year1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="2015"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/year"
        app:layout_constraintStart_toStartOf="@+id/brand1"
        app:layout_constraintTop_toTopOf="@+id/year" />


    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="SUV"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:flow_horizontalBias="0.5"
        app:layout_constraintStart_toStartOf="@+id/job_order1"
        app:layout_constraintEnd_toEndOf="@id/job_order1"
        app:layout_constraintTop_toBottomOf="@id/vehicle_details" />


    <TextView
        android:id="@+id/type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.3"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="2015"
        android:layout_marginLeft="60dp"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/type"
        app:layout_constraintStart_toEndOf="@id/type"
        app:layout_constraintTop_toTopOf="@+id/type" />


    <TextView
        android:id="@+id/number_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="Number Plate"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:flow_horizontalBias="0.5"
        app:layout_constraintStart_toStartOf="@+id/type"
        app:layout_constraintTop_toTopOf="@id/type" />


    <TextView
        android:id="@+id/number_plate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/sf_pro_display"
        android:text="SUV"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        android:alpha="0.3"
        app:flow_horizontalBias="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/number_plate"
        app:layout_constraintStart_toStartOf="@+id/type1"
        app:layout_constraintTop_toTopOf="@+id/number_plate" />

    <androidx.cardview.widget.CardView
        android:id="@+id/service_provider_detail"
        android:layout_width="match_parent"
        android:layout_height="159dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/job_order1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/service_provider_detail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Service Provider Details"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="@id/service_provider_detail"
        app:layout_constraintStart_toStartOf="@id/service_provider_detail"
        app:layout_constraintEnd_toEndOf="@id/service_provider_detail" />


    <TextView
        android:id="@+id/service_provider_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Service Provider Name"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="11dp"
        app:layout_constraintStart_toStartOf="@id/service_provider_detail"
       app:layout_constraintTop_toBottomOf="@id/service_provider_detail1"/>

    <TextView
        android:id="@+id/service_provider_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="A5409009801"
        android:textColor="#4AD594"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/service_provider_detail"
        app:layout_constraintTop_toTopOf="@+id/service_provider_name" />

    <TextView
        android:id="@+id/service_provider_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Service Provider City"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/service_provider_name"
        app:layout_constraintTop_toBottomOf="@id/service_provider_name" />

    <TextView
        android:id="@+id/service_provider_city1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Lahore"
        android:textColor="#4AD594"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/service_provider_city"

        app:layout_constraintStart_toStartOf="@+id/service_provider_name1"
        app:layout_constraintTop_toTopOf="@+id/service_provider_city" />

    <TextView
        android:id="@+id/service_provider_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Order Status"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/service_provider_city"
        app:layout_constraintTop_toBottomOf="@+id/service_provider_city" />

    <ImageView
        android:id="@+id/service_provider_location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:elevation="5dp"
        android:fontFamily="@font/poppins_medium"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@+id/service_provider_location"
        app:layout_constraintStart_toStartOf="@+id/service_provider_city1"
        app:layout_constraintTop_toTopOf="@+id/service_provider_location" />

    <androidx.cardview.widget.CardView
        android:id="@+id/order_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/service_provider_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/order_details1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Order Details"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toTopOf="@id/parent2"
                app:layout_constraintStart_toStartOf="@id/parent2"
                app:layout_constraintEnd_toEndOf="@id/parent2" />
            <TextView
                android:id="@+id/part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parts"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toBottomOf="@id/order_details1"
                app:layout_constraintLeft_toLeftOf="@id/parent2"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/order_details_part_recylerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                app:layout_constraintLeft_toLeftOf="@id/parent2"
                app:layout_constraintRight_toRightOf="@id/parent2"
                app:layout_constraintTop_toBottomOf="@id/part"/>

            <TextView
                android:id="@+id/services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toBottomOf="@id/order_details_part_recylerview"
                app:layout_constraintLeft_toLeftOf="@id/parent2"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/services_details_part_recylerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                app:layout_constraintLeft_toLeftOf="@id/parent2"
                app:layout_constraintRight_toRightOf="@id/parent2"
                app:layout_constraintTop_toBottomOf="@id/part"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>