<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Conragulation_Activity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:minHeight="?actionBarSize"
        android:background="@drawable/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/toolbar1"
        android:elevation="10dp"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto Master"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toTopOf="@+id/toolbar1"
        app:layout_constraintBottom_toBottomOf="@id/toolbar1"
        app:layout_constraintLeft_toLeftOf="@id/toolbar1"
        app:layout_constraintRight_toRightOf="@id/toolbar1"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:tint="@color/white" />
    <ImageView
        android:id="@+id/cart"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="14dp"
        android:elevation="10dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:tint="@color/white" />


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="48dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.08"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Many"
            android:textColor="@color/button"
            android:textSize="16dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Congratulations"
            android:textColor="@color/button"
            android:textSize="26dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:text="You have successfully created your \n
order."
            android:textColor="@color/button"
            android:textSize="16dp"
            android:lineSpacingExtra="-5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"/></LinearLayout>


    <ImageView
        android:layout_width="277dp"
        android:layout_height="222dp"

        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_congratulations_svg"/>

    <View
        android:id="@+id/view_of_product_services"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:text="Navigate Now"
        android:elevation="5dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="@font/sf_pro_display"
        android:textStyle="bold"
        android:background="@drawable/login_button"
        app:layout_constraintTop_toTopOf="@id/view_of_product_services"
        app:layout_constraintLeft_toLeftOf="@id/view_of_product_services"
        app:layout_constraintRight_toRightOf="@id/view_of_product_services"
        app:layout_constraintBottom_toBottomOf="@id/view_of_product_services"
        />

</androidx.constraintlayout.widget.ConstraintLayout>