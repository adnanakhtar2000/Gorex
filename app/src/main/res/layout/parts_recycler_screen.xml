<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/orders_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air Filter Toyota"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="189dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/poppins_medium"
        android:text="200 SR"
        android:textColor="#12B96B"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/orders_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/orders_name" />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:src="@drawable/ic_shape"
        android:layout_marginLeft="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/order_price"
        app:layout_constraintStart_toEndOf="@+id/order_price"
        app:layout_constraintTop_toTopOf="@+id/order_price"
        app:tint="@color/black" />


</androidx.constraintlayout.widget.ConstraintLayout>