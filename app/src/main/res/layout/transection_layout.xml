<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/transection_layout_bg">



    <TextView
        android:id="@+id/order_number_transection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order #"
        android:textSize="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="38dp"

        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="13dp"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins"
        android:text="3433455"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/order_number_transection"
        app:layout_constraintLeft_toRightOf="@+id/order_number_transection"
        app:layout_constraintTop_toTopOf="@id/order_number_transection" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:fontFamily="@font/poppins_medium"
        android:text="20.17"
        android:textColor="#FD2727"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView8" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@id/textView9"
        android:textColor="#FD2727"
        app:layout_constraintRight_toLeftOf="@id/textView9"
        app:layout_constraintTop_toTopOf="@id/textView9"
       />



    <TextView
        android:id="@+id/wallet_transection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet"
        android:textColor="#404040"
        android:textSize="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintStart_toStartOf="@+id/order_number_transection"
        app:layout_constraintTop_toBottomOf="@+id/order_number_transection"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
     android:id="@+id/date_time_transection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:fontFamily="@font/poppins_medium"
        android:text="09:37 AM"
        android:textColor="#404040"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/wallet_transection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wallet_transection" />






</androidx.constraintlayout.widget.ConstraintLayout>